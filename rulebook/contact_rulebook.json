{
    "rules": [
        {
            "column": "Email",
            "rule": "not_null",
            "message": "'Email' should not be null",
            "rule_category": "Completeness"
        },
        {
            "column": "Email",
            "rule": "regex",
            "expression": "^[A-Za-z0-9._%+-]+@[A-Za-z0-9.-]+\\.[A-Za-z]{2,}$",
            "message": "'Email' should be valid",
            "rule_category": "Validation"
        }
    ]
}